<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/item_note_margin"
    android:clickable="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/mImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:contentDescription="@string/item_note_image"/>

    <LinearLayout
        android:id="@+id/mTextContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/mImage"
        android:background="@drawable/bg_item_note"
        android:orientation="vertical"
        android:padding="@dimen/item_note_padding">

        <TextView
            android:id="@+id/content_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="5"
            android:textAppearance="?android:textAppearanceSmall"
            tools:text="Note content preview"/>

        <TextView
            android:id="@+id/created_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_note_padding"
            android:textAppearance="?android:textAppearanceSmall"
            android:textSize="12sp"
            tools:text="18 лютого 2017 12:16"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/mTintOverlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mTextContainer"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"/>
</RelativeLayout>